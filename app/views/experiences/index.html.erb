

<div class="exp-page-container">
  <h1>Find an experience near you</h1>
  <div class="row">
    <% @experiences.each do |experience| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="exp-container">

          <div class="exp-card-head">
            <h5><%= link_to experience.title, experience_path(experience) %></h5>
            <p>With <%= experience.grandmother.name %></p>
          </div>

          <div class="card-footer2">
              <p><%= experience.price %>â‚¬</p>
              <p><%= link_to 'Delete experience', experience_path(experience),
                      method: :delete,
                      data: { confirm: "Delete #{experience.title}?"} %></p>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>

