<div id="sign-background">
  <div class="container-sign">
    <div class="sign">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="btn-container">
          <%= link_to 'Go back', root_path, class: "btn action-btn " %>
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn action-btn' %>
        <div class="form-actions sign-btn">
          <%= f.button :submit, "Log in", class: 'text-white' %>
        </div>
          <%# <%= render "devise/shared/links", class: 'btn action-btn' %>
      <% end %>    
    </div>
  </div>
</div>