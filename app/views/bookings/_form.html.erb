<%= simple_form_for [experience, booking] do |f| %>
  <div class="align-items-center">
    <div>
      <p>Experience</p>
      <h3><%= experience.title %></h3>
      <p><%= f.hidden_field :experience, value: experience.id %></p>
    </div>
    
    <div>
      <p>Date of the event</p>
      <h3><%= Time.now.strftime("%B %d, %Y") %></h3>
      <%= f.hidden_field :date, value: Time.now %>
    </div>

    <div>
      <p>For the modest amount of</p>
      <h3><%= experience.price %>â‚¬</h3>
      <%= f.hidden_field :price, value: experience.price %>
    </div>

    <div>
      <p>Who will attend</p>
      <h3><%= current_user.name %></h3>
      <%= f.hidden_field :user, value: current_user.id %>
    </div>
  </div>
  <div class="d-flex justify-content-around">
    <%= link_to 'Go back', experience_path(@experience), class: 'btn action-btn' %>
    <%= f.button :submit, 'Yes! I want to go!', class: 'btn sign-btn', id: 'book-btn' %>
  </div>
<% end %>