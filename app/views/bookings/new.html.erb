
<div id="sign-background">
  <div class="container-sign">
    
    <div class="sign booking-form" id="booking-form" style="display: show;">
      <%= render 'form', experience: @experience, booking: @booking %>
    </div>
    <div class="sign booking-form booking-confirmation" id="confirmation-form" style="display: none;">
      <div><h5 class="mt-5">Rejoyce!!</h5></div>
      <div><p class="mt-3">Your booking for:</p></div>
      <div><h3 class="mt-3 align-items-center"><%= @experience.title %></h3></div>
      <div><p class="mt-3 pb-4">is confirmed!</p></div>
      <div><%= link_to 'Go back', profile_path(@user), class: 'btn action-btn mt-4' %></div>
    
    </div>
  </div>
</div>