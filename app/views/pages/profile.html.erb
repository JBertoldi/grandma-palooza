<h2 class="my-name">Welcome, <%= @user.name %>!</h2>

<div style= "display:flex">
  <%= link_to 'Create event', new_experience_path, style:"margin: 6px 10px" %>
  <%= link_to 'Add grandmother', new_grandmother_path, style:"margin: 6px 10px" %>
</div>

<div class="row">
<div class="alert alert-success" role="alert">
  You have logged in successfully
 <% if notice.present? %>
  <%= notice.html_safe %>
<% end %>
</div>
</div>

<div class="profile-card">
  <%= image_tag "https://images.unsplash.com/photo-1603415526960-f7e0328c63b1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", :class => "avatar-large" %>

  <h4 class="profile-name-margin"><%= @user.name%></h4>

  <p>Nationality: <%= @user.nationality %></p>
  <p>Location: <%= @user.location %></p>

  <p><%= @user.email %></p>

</div>




<!-- need to work on the destroy grandmother method, check the pages_controller -->
<ul>
  <% @grandmothers.each do |grandmother| %>
    <li>
      <%= link_to 'Delete', grandmother_destroy_path(grandmother), method: :delete %>
    </li>
  <% end %>
</ul>
